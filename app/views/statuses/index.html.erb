<div class="page-header">
<h1>All of the Statuses</h1>
</div>

<%= link_to "Post a New status", new_status_path, class: "btn btn-success" %>
<% @statuses.each do |status| %>
<div class="status">
  <font size= "1"><strong><%= status.name %></strong></font size>
  <p><%= status.content %> </p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago", status, class: "" %>
    <span class="admin">
        <%= link_to "Edit", edit_status_path(status), class: "" %>   
        </span>
        <span class = "admin1"> 
      <%= link_to "Delete", status, method: :delete, data: { confirm: "Sure?"}, class: "" %>
      </span>
  </div>
<% end %>